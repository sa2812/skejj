{
  "$ref": "#/definitions/ScheduleTemplate",
  "definitions": {
    "ScheduleTemplate": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string"
        },
        "steps": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "minLength": 1
              },
              "title": {
                "type": "string",
                "minLength": 1
              },
              "description": {
                "type": "string"
              },
              "durationMins": {
                "type": "integer",
                "exclusiveMinimum": 0
              },
              "dependencies": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "stepId": {
                      "type": "string"
                    },
                    "dependencyType": {
                      "type": "string",
                      "enum": [
                        "FinishToStart",
                        "StartToStart",
                        "FinishToFinish",
                        "StartToFinish"
                      ],
                      "default": "FinishToStart"
                    }
                  },
                  "required": [
                    "stepId"
                  ],
                  "additionalProperties": false
                },
                "default": []
              },
              "trackId": {
                "type": "string"
              },
              "timingPolicy": {
                "type": "string",
                "enum": [
                  "Asap",
                  "Alap"
                ]
              },
              "resourceNeeds": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "resourceId": {
                      "type": "string"
                    },
                    "quantity": {
                      "type": "integer",
                      "exclusiveMinimum": 0
                    },
                    "minPeople": {
                      "type": "integer",
                      "exclusiveMinimum": 0
                    },
                    "maxPeople": {
                      "type": "integer",
                      "exclusiveMinimum": 0
                    }
                  },
                  "required": [
                    "resourceId",
                    "quantity"
                  ],
                  "additionalProperties": false
                },
                "default": []
              }
            },
            "required": [
              "id",
              "title",
              "durationMins"
            ],
            "additionalProperties": false
          },
          "minItems": 1
        },
        "tracks": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "minLength": 1
              },
              "name": {
                "type": "string",
                "minLength": 1
              }
            },
            "required": [
              "id",
              "name"
            ],
            "additionalProperties": false
          },
          "default": []
        },
        "resources": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "minLength": 1
              },
              "name": {
                "type": "string",
                "minLength": 1
              },
              "kind": {
                "type": "string",
                "enum": [
                  "Equipment",
                  "People",
                  "Consumable"
                ]
              },
              "capacity": {
                "type": "integer",
                "exclusiveMinimum": 0
              },
              "roles": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "default": []
              }
            },
            "required": [
              "id",
              "name",
              "kind",
              "capacity"
            ],
            "additionalProperties": false
          },
          "default": []
        },
        "timeConstraint": {
          "type": "object",
          "properties": {
            "startTime": {
              "type": "string"
            },
            "endTime": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "defaultNumPeople": {
          "type": "integer",
          "exclusiveMinimum": 0
        }
      },
      "required": [
        "id",
        "name",
        "steps"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "https://json-schema.org/draft-07/schema#"
}
