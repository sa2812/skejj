{
  "name": "skejj",
  "version": "0.1.0",
  "description": "Schedule engine - Rust core with Node.js bindings",
  "main": "index.js",
  "types": "index.d.ts",
  "bin": {
    "skejj": "./src/index.ts"
  },
  "scripts": {
    "build": "napi build --platform --release --package skejj-node --output-dir .",
    "build:debug": "napi build --platform --package skejj-node --output-dir .",
    "start": "tsx src/index.ts",
    "schema:gen": "tsx scripts/generate-schema.ts"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "zod": "^3.0.0"
  },
  "devDependencies": {
    "@napi-rs/cli": "^3.5.1",
    "@types/node": "^25.2.3",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "zod-to-json-schema": "^3.25.1"
  }
}
